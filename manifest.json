{
	"name": "Getting Started Example",
	"description": "Build an Extension!",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "js/background.js"
	},
	"permissions": [
		"scripting",
		"storage",
		"activeTab"
	],
	"action": {
		"default_popup": "html/popup.html"
	},
	"options_page": "html/options.html",
	"web_accessible_resources": [
		{
			"resources": [
				"script.js"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/RecordRTC.js",
				"js/index.js"
			]
		}
	]
}